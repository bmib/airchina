<?xml version="1.0" encoding="UTF-8"?>
<!-- DEFAULT-CONFIG的配置为默认数据源配置,通过getConnection()获取 -->
<!-- 警告：请正确配置数据源，一旦有一处配置有误，系统将直接退出 -->
<c3p0-config>
  <default-config>
    <property name="user">mybase</property>
    <property name="password">mybase</property>
    <property name="driverClass">oracle.jdbc.driver.OracleDriver</property>
    <property name="jdbcUrl">jdbc:oracle:thin:@liuyong:1521:orcl</property>
    <property name="initialPoolSize">5</property>
    <property name="maxIdleTime">30</property>
    <property name="maxPoolSize">100</property>
    <property name="minPoolSize">10</property>
  </default-config>
